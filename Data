import pandas as pd
import numpy as np
from datetime import datetime, timedelta

# Parameters
num_rows = 1000
start_order_id = 2000
start_date = datetime(2023, 1, 1)

products = ["Books", "Sports", "Home & Kitchen", "Clothing", "Electronics"]
regions = ["North", "South", "East", "West"]

# Generate data
np.random.seed(42)
order_ids = np.arange(start_order_id, start_order_id + num_rows)
product_choices = np.random.choice(products, num_rows)
region_choices = np.random.choice(regions, num_rows)
quantities = np.random.randint(1, 11, num_rows)
unit_prices = np.random.randint(20, 500, num_rows)
order_dates = [start_date + timedelta(days=int(x)) for x in np.random.randint(0, 200, num_rows)]
total_sales = quantities * unit_prices

# Create DataFrame
df = pd.DataFrame({
    "OrderID": order_ids,
    "Product": product_choices,
    "Region": region_choices,
    "Quantity": quantities,
    "UnitPrice": unit_prices,
    "OrderDate": [d.strftime("%Y-%m-%d") for d in order_dates],
    "TotalSales": total_sales
})

# Save to CSV
df.to_csv("synthetic_ecommerce_sales.csv", index=False)
print("Data generated and saved to synthetic_ecommerce_sales.csv")
